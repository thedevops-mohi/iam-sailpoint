            "name": "Rahul.Majumder"
        },
        "trigger": {
            "displayName": "Source  Account Created",
            "type": "EVENT",
            "attributes": {
                "filter.$": "$[?($.sourceId == \"a4dc7c1f64fc44fe9e778339d4915993\")]",
                "id": "idn:source-created"
            }
        }
    }
