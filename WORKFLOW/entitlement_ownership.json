        },
        "trigger": {
            "type": "EXTERNAL",
            "attributes": {
                "clientId": "cdf39bc4-31c6-4b24-9c9e-64502fe92c10",
                "description": "Trigger to start entitlement reassignment",
                "id": "idn:external-http",
                "url": "https://igmfinancial-dev.api.identitynow.com/beta/workflows/execute/external/5409e059-a191-43c6-8b0d-4a35b3256192"
            }
        }
    }
